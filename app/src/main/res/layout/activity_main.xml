<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    tools:context=".HomePage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="775dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/accountBttn"
            android:layout_width="33sp"
            android:layout_height="33sp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="18dp"
            android:background="@drawable/ic_person"
            android:contentDescription="@string/app_name"
            android:onClick="OpenHome_Page"
            android:scaleType="fitCenter"
            tools:ignore="DuplicateSpeakableTextCheck,ImageContrastCheck,UsingOnClickInXml,TouchTargetSizeCheck" />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            app:srcCompat="@drawable/header_logo"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/logoutBttn"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="355dp"
            android:contentDescription="@string/app_name"
            android:onClick="loggingout"
            android:background="@drawable/ic_logout"
            tools:ignore="ImageContrastCheck,TouchTargetSizeCheck,UsingOnClickInXml" />


        <ScrollView
            android:layout_marginTop="60dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <FrameLayout
                    android:layout_width="367dp"
                    android:layout_height="150dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="20dp"
                    android:background="@android:color/darker_gray"
                    android:backgroundTint="#ffffff"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <!-- GREETINGS -->
                    <TextView
                        android:id="@+id/greeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello, "
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="25sp"
                        android:textStyle="bold" />


                    <!-- SUBSCRIBER'S FIRSTNAME -->
                    <TextView
                        android:id="@+id/fname"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="70dp"
                        android:text=" "
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        tools:ignore="SpeakableTextPresentCheck" />


                    <!-- Account name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:paddingTop="5dp"
                        android:text="@string/account_name"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/fullname"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:layout_marginStart="120dp"
                        android:paddingTop="4dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="15sp" />


                    <!-- Account number -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="65dp"
                        android:paddingTop="5dp"
                        android:text="@string/account_number"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/accountNumber"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="65dp"
                        android:layout_marginStart="130dp"
                        android:paddingTop="4dp"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="15sp" />


                    <!-- PLAN -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="90dp"
                        android:paddingTop="5dp"
                        android:text="@string/plan"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/plan"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="90dp"
                        android:layout_marginStart="40dp"
                        android:paddingTop="5dp"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="360dp"
                    android:layout_height="115dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/corner_solidblue"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp"

                    >

                    <TextView
                        android:id="@+id/remaining_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Amount To Pay"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:textStyle="bold"/>


                    <!-- Amount -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="35dp"
                        android:text="₱"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/amountToPay"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="35dp"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"/>


                    <!-- DUE DATE -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="70dp"
                        android:text="Due Date:"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"/>


                    <TextView
                        android:id="@+id/dueDate"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="70dp"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"/>


                    <!-- PAY NOW BUTTON -->
                    <Button
                        android:id="@+id/paynow_bttn"
                        android:layout_width="120dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="220dp"
                        android:backgroundTint="#ffffff"
                        android:onClick="OpenPaynow"
                        android:text="@string/pay_now"
                        android:textColor="#1975AE"
                        android:textSize="14sp"
                        tools:ignore="UsingOnClickInXml,TouchTargetSizeCheck" />

                </FrameLayout>


                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Upcoming Due Dates Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Icon -->
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_access_time"/>

                        <!-- Text and Button -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/upcoming_due_dates"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/seeBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="See More"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />
                    </LinearLayout>
                </LinearLayout>




                <FrameLayout
                    android:layout_width="360dp"
                    android:layout_height="100dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/corner_solidwhite"
                    android:orientation="vertical"
                    android:padding="8dp"
                    tools:ignore="TextSizeCheck"
                    >


                    <!-- PLAN AMOUNT -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="₱"
                        android:textColor="#0277BD"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/planAmount"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:textColor="#0277BD"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <!-- PAYMENT DUE DATE  -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="25dp"
                        android:paddingTop="4dp"
                        android:text="@string/payment_due_date"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/paymentDueDate"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="155dp"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:ignore="DuplicateIds" />


                    <!-- ACCOUNT STATUS -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="55dp"
                        android:paddingTop="3dp"
                        android:text="Account Status:"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/accountStatus"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="130dp"
                        android:layout_marginTop="55dp"
                        android:paddingTop="2dp"
                        android:textColor="#AD1457"
                        android:textSize="16sp" />
                </FrameLayout>




                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/ic_mail"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="347dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="177dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="67dp"
                    android:layout_marginEnd="161dp"
                    android:layout_marginTop="-40dp"
                    android:text="Notification"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="360dp"
                    android:layout_height="95dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/corner_solidwhite"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment Reminder"
                                android:textColor="#0277BD"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <!--                            <TextView-->
                            <!--                                android:id="@+id/paymentStatus"-->
                            <!--                                android:layout_width="wrap_content"-->
                            <!--                                android:layout_height="wrap_content"-->
                            <!--                                android:layout_marginStart="8dp"-->
                            <!--                                android:text="Pending"-->
                            <!--                                android:textColor="#D32F2F"-->
                            <!--                                android:textSize="16sp"-->
                            <!--                                android:textStyle="bold" />-->
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center"
                            android:text="Please settle PHP 1,500 by Nov 30 to avoid disruption."
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="360dp"
                    android:layout_height="95dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/corner_solidwhite"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment Reminder"
                                android:textColor="#0277BD"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <!--                            <TextView-->
                            <!--                                android:id="@+id/paymentStatus"-->
                            <!--                                android:layout_width="wrap_content"-->
                            <!--                                android:layout_height="wrap_content"-->
                            <!--                                android:layout_marginStart="8dp"-->
                            <!--                                android:text="Pending"-->
                            <!--                                android:textColor="#D32F2F"-->
                            <!--                                android:textSize="16sp"-->
                            <!--                                android:textStyle="bold" />-->
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center"
                            android:text="Please settle PHP 1,500 by Nov 30 to avoid disruption."
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="360dp"
                    android:layout_height="95dp"
                    android:layout_marginVertical="8dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/corner_solidwhite"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Special Offer!"
                            android:textAlignment="center"
                            android:textColor="#388E3C"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center"
                            android:text="Upgrade to a 100 Mbps plan and get 1 month free! Offer valid until Dec 15."
                            android:textColor="#000000"
                            android:textSize="14sp" />
                    </LinearLayout>
                </FrameLayout>



            </LinearLayout>

        </ScrollView>


    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemIconTint="#3EBD26"
        app:itemTextColor="#3EBD26"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>



</RelativeLayout>